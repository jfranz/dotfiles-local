#!/bin/sh

brew bundle --file=- <<EOF
brew "aria2"
brew "ffmpeg"
brew "terminal-notifier"
brew "wget"
brew "youtube-dl"
brew "puma/puma/puma-dev"
cask "chromedriver"
EOF

fancy_echo "Cleaning up old Homebrew formulae ..."
brew cleanup

if [ -r "$HOME/.rcrc" ]; then
  fancy_echo "Updating dotfiles ..."
  rcup
fi
